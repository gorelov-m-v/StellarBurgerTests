        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- версия Aspectj -->
        <aspectj.version>1.9.8</aspectj.version>
        <!-- версия Allure -->
        <allure.version>2.20.1</allure.version>
